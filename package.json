{
  "name": "UnoDAO",
  "description": "UnoDAO Governance Contracts",
  "license": "MIT",
  "version": "1.0.0",
  "scripts": {
    "test": "npx hardhat test",
    "test:local": "npx hardhat test --network hardhat",
    "compile": "npx hardhat compile",
    "mainnet:deploy": "npx hardhat --network mainnet deploy",
    "mainnet:verify": "npx hardhat --network mainnet etherscan-verify --solc-input",
    "mainnet:export": "npx hardhat --network mainnet export --export exports/mainnet.json",
    "sepolia:deploy": "npx hardhat --network sepolia deploy",
    "sepolia:verify": "npx hardhat --network sepolia etherscan-verify --solc-input",
    "sepolia:export": "npx hardhat --network sepolia export --export exports/sepolia.json",
    "prettier": "prettier --write test/**/*.js && prettier --write contracts/**/*.sol"
  },
  "dependencies": {
    "@openzeppelin/contracts": ">=4.4.1",
    "@openzeppelin/contracts-upgradeable": "^5.0.1",
    "@openzeppelin/hardhat-upgrades": "1.10.0",
    "@uniswap/v3-core": "^1.0.0",
    "@uniswap/v3-periphery": "^1.2.1",
    "abdk-libraries-solidity": "3.0.0",
    "chai": "^4.3.4",
    "dotenv": "^10.0.0",
    "ethereum-waffle": "^3.2.0",
    "ethers": "^5.4.4",
    "hardhat": "^2.1.1",
    "save": "^2.9.0",
    "solidity-coverage": "^0.7.17"
  },
  "devDependencies": {
    "@nomiclabs/buidler": "^1.4.8",
    "@nomiclabs/hardhat-ethers": "^2.0.0",
    "@nomiclabs/hardhat-etherscan": "^3.0.0",
    "@nomiclabs/hardhat-ganache": "^2.0.1",
    "@nomiclabs/hardhat-truffle5": "^2.0.0",
    "@nomiclabs/hardhat-waffle": "^2.0.1",
    "@nomiclabs/hardhat-web3": "^2.0.0",
    "ansi-regex": ">=5.0.1",
    "chai": "",
    "hardhat-contract-sizer": "^2.5.1",
    "hardhat-deploy": "^0.11.10",
    "hardhat-deploy-ethers": "^0.3.0-beta.13",
    "hardhat-gas-reporter": "^1.0.4",
    "solidity-coverage": ""
  }
}
